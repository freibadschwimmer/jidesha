{
  "manifest_version": 2,
  "name": "KaamosCreations Desktop Streamer",
  "description": "Simple extension that allows to stream your desktop in KaamosCreations deployments of Jitsi-Meet. Based on the great work of Jitsi.",
  "version": "0.1.4",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "kc-logo-16x16.png",
    "48": "kc-logo-48x48.png",
    "128": "kc-logo-128x128.png"
  },
  "background": {
        "scripts": [ "background.js" ],
        "persistent": true
  },
  "permissions": [
      "desktopCapture"
  ],
  "externally_connectable": {
      "matches": [
          "*://meet.kaamoscreations.com/*",
          "*://meet.calotte-academy.com/*"
      ]
  }
}
