{
  "manifest_version": 2,
  "name": "KaamosCreations Desktop Streamer",
  "description": "A simple extension that allows you to stream your desktop into KaamosCreations meetings. Based on the great work of Jitsi, Jitsi-Meet and Jitsi-Videobridge!",
  "version": "0.1.3",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "kc-logo-16x16.png",
    "48": "kc-logo-48x48.png",
    "128": "kc-logo-128x128.png"
  },
  "background": {
        "scripts": [ "background.js" ],
        "persistent": true
  },
  "permissions": [
      "desktopCapture"
  ],
  "externally_connectable": {
      "matches": [
          "*://meet.kaamoscreations.com/*",
          "*://meet.calotte-academy.com/*"
      ]
  }
}
